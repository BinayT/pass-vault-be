{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "baseUrl": "./src",
        "paths": {
            "@models/*": ["models/*"],
            "@controllers/*": ["controllers/*"],
            "@config/*": ["config/*"],
            "@routes/*": ["routes/*"],
            "@helpers/*": ["helpers/*"],
            "@utils/*": ["utils/*"],
            "@middlewares/*": ["middlewares/*"],
        },
    },
    "include": ["src/**/*", "src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
}
  